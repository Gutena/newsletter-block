{
    "$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
    "name": "gutena/newsletter-button-field",
    "title": "Newsletter Button Field",
    "category": "gutena",
    "parent": [ "gutena/newsletter-field" ],
    "description": "Gutena Newsletter Button",
    "textdomain": "newsletter-block-gutena",
    "supports": {
        "html": false,
		"color": {
			"background": true,
            "text": true
		},
        "typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontStyle": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		}
    },
    "attributes": {
        "style": {
            "type": "object",
            "default": {
                "color": {
                    "text": "#000000",
                    "background": "#EBEBEB"
                },
                "border": {
                    "radius": "5px"
                },
                "spacing": {
                    "padding": {
                        "top": "12px",
                        "bottom": "12px",
                        "left": "20px",
                        "right": "20px"
                    },
                    "margin": {
                        "top": "10px",
                        "bottom": "10px",
                        "left": "0",
                        "right": "0"
                    }
                },
                "typography": {
                    "fontSize": "14px"
                }
            }
        },
        "btnText": {
            "type": "string",
            "default": "Subscribe"
        },
        "btnPosition": {
            "type": "string",
            "default": "auto"
        },
        "btnMaxWidth":  {
            "type": "number"
        },
        "btnType": {
            "type": "string",
            "default": "text"
        },
        "btnIcon": {
            "type": "string",
            "default": "wordpress-arrowRight"
        },
        "btnIconPosition": {
            "type": "string",
            "default": "left"
        },
        "btnIconSize": {
            "type": "number",
            "default": 22
        },
        "btnIconColor": {
            "type": "string",
            "default": "#000000"
        },
        "btnIconSpacing": {
            "type": "number",
            "default": 5
        }
    },
    "usesContext": [
        "gutenaNewsletterDisplayType" 
    ],
    "editorScript": "file:./index.js"
}
